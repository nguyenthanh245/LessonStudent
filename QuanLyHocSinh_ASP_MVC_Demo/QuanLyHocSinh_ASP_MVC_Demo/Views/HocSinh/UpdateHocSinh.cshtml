@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using QuanLyHocSinh_ASP_MVC_Demo.Models
@model HocSinh

<form asp-action="UpdateHocSinh" asp-controller="HocSinh" method="post">
    MaHocSinh:<input type="text" asp-for="MaSv" readonly="true"/>
    <br />
    HoTen:<input type="text" asp-for="HoTen" />
    <br />
    GioiTinh:
    <br />
    Male:<input type="radio" asp-for="GioiTinh" value="true" checked="true" />
    FeMale:<input type="radio" asp-for="GioiTinh" value="false" />
    <br />
    NgaySinh:<input type="date" asp-for="NgaySinh" />
    <br />
    DienThoai:<input type="text" asp-for="DienThoai" />
    <br />
    Email:<input type="email" asp-for="Email" />
    <br />
    DiaChi:<input type="text" asp-for="DiaChi" />
    <br />
    ChuyenKhoa:
    <select asp-for="MaKhoa">
        @foreach (ChuyenKhoa c in @ViewBag.ChuyenKhoas)
        {
            <option value="@c.MaKhoa">@c.TenKhoa</option>
        }
    </select>
    <input type="submit" value="Add" />

</form>

